# Environment Variables for Docker Deployment
# Copy this file to .env and update with your credentials

# Bitbucket API Configuration
BITBUCKET_URL=https://api.bitbucket.org/2.0

# Authentication: Use either Token OR Username+Password
# Option 1: OAuth Token
BITBUCKET_TOKEN=

# Option 2: App Password (recommended for most use cases)
BITBUCKET_USERNAME=your_username
BITBUCKET_PASSWORD=your_app_password

# Default workspace (optional but convenient)
BITBUCKET_WORKSPACE=your_workspace_slug

# MCP Server Settings (for HTTP/SSE mode)
MCP_TRANSPORT=sse
MCP_HOST=0.0.0.0
MCP_PORT=8000

# Logging level (optional)
# Options: DEBUG, INFO, WARNING, ERROR
FASTMCP_LOG_LEVEL=INFO

